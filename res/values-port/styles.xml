<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="EditText" parent="NPWidget.Holo.EditText.NumberPickerInputText">
        <item name="android:textSize">74sp</item>
        <item name="android:paddingTop">0sp</item>
        <item name="android:paddingBottom">0sp</item>
        <item name="android:textColorHighlight">@android:color/black</item>
        <item name="android:cursorVisible">false</item>
    </style>
    
    <style name="WhiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">120sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="MinuteWhiteText" parent="WhiteText">
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="ColonWhiteText" parent="WhiteText">
        <item name="android:layout_width">24dip</item>
        <item name="android:paddingBottom">16dip</item>
        <item name="android:layout_toRightOf">@id/MinuteText</item>
    </style>
    
    <style name="SecondWhiteText" parent="WhiteText">
        <item name="android:layout_toRightOf">@id/ColonText</item>
    </style>
    
    <style name="TenthWhiteText" parent="WhiteText">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_alignTop">@id/SecondText</item>
        <item name="android:layout_toRightOf">@id/SecondText</item>
    </style>

</resources>