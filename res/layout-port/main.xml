<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TimeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMain" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
	    <TextView
	        android:id="@+id/MinuteText"
	        style="@style/MinutePortraitWhiteText"
	        android:text="00" />
	    <TextView
	        android:id="@+id/ColonText"
	        style="@style/ColonPortraitWhiteText"
	        android:text="@string/Delimiter" />
	    <TextView
	        android:id="@+id/SecondText"
	        style="@style/SecondPortraitWhiteText"
	        android:text="00" />
	    <TextView
		    android:id="@+id/MillisecondText"
		    style="@style/TenthPortraitWhiteText"
		    android:text="0" />
	</RelativeLayout>
    <Button
        android:id="@+id/DoneButton"
        style="@style/DoneButton" />
    <CheckedTextView
        android:id="@+id/LoopCheck"
        style="@style/LoopCheck" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/DoneButton"
        android:gravity="center"
        android:orientation="horizontal" >
        <net.simonvt.widget.NumberPicker
            android:id="@+id/MinutePicker"
            android:layout_width="120dip"
            android:layout_height="match_parent"
            android:visibility="gone" />
        <net.simonvt.widget.NumberPicker
            android:id="@+id/SecondPicker"
            android:layout_width="120dip"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>