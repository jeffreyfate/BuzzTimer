<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="EditText" parent="NPWidget.Holo.EditText.NumberPickerInputText">
        <item name="android:textSize">42sp</item>
        <item name="android:paddingTop">0sp</item>
        <item name="android:paddingBottom">0sp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
    </style>
    
    <style name="WhiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">200sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="MinuteWhiteText" parent="WhiteText">
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="ColonWhiteText" parent="WhiteText">
        <item name="android:layout_width">40dip</item>
        <item name="android:paddingBottom">28dip</item>
        <item name="android:layout_toRightOf">@id/MinuteText</item>
    </style>
    
    <style name="SecondWhiteText" parent="WhiteText">
        <item name="android:layout_toRightOf">@id/ColonText</item>
    </style>
    
    <style name="TenthWhiteText" parent="WhiteText">
        <item name="android:textSize">80sp</item>
        <item name="android:layout_alignTop">@id/SecondText</item>
        <item name="android:layout_toRightOf">@id/SecondText</item>
    </style>
    
    <style name="NumberPickerLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>